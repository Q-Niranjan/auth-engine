# Application Configuration
APP_NAME=AuthEngine
APP_VERSION=1.0.0
DEBUG=False
API_V1_PREFIX=/api/v1

# Security - IMPORTANT: Change these in production!
SECRET_KEY=your-secret-key-min-32-characters-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database URLs - Update with your actual database credentials
POSTGRES_URL=postgresql+asyncpg://<username>:<password>@localhost:5432/authengine
MONGODB_URL=mongodb://localhost:27017
REDIS_URL=redis://localhost:6379

# PostgreSQL Configuration
POSTGRES_POOL_SIZE=20
POSTGRES_MAX_OVERFLOW=10

# MongoDB Configuration
MONGODB_DB_NAME=authengine

# Redis Configuration
REDIS_DB=0
REDIS_MAX_CONNECTIONS=50

# JWT Configuration - IMPORTANT: Change JWT_SECRET_KEY in production!
JWT_SECRET_KEY=your-jwt-secret-key-min-32-characters-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ISSUER=authengine
JWT_AUDIENCE=authengine-api

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_ENABLED=True

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=True
PASSWORD_REQUIRE_LOWERCASE=True
PASSWORD_REQUIRE_DIGIT=True
PASSWORD_REQUIRE_SPECIAL=True

# Session Management
MAX_CONCURRENT_SESSIONS=5
SESSION_TIMEOUT_MINUTES=60

# Email Settings
EMAIL_PROVIDER=sendgrid
EMAIL_PROVIDER_API_KEY=your-email-provider-api-key
EMAIL_SENDER=noreply@authengine.com

SUPERADMIN_EMAIL = "admin@gmail.com"
SUPERADMIN_PASSWORD = "admin@1234!"  # pragma: allowlist secret

# CORS Configuration
# For multiple origins, use comma-separated values
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*
